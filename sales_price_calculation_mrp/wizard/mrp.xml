<odoo>
    <record id="mrp_report_wizard_form" model="ir.ui.view">
        <field name="name">mrp.report.form</field>
        <field name="model">mrp.report.wizard</field>
        <field name="arch" type="xml">
            <form string="MRP Report">
                <group>
                    <group>
                        <field name="prod_ids" widget="many2many_tags"/>

                        <field name="date_from" required="1"/>
                    </group>
                    <group>
                        <field name="categ_ids" widget="many2many_tags"/>
                        <field name="date_to" options="{'no_create': True}" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="PDF" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="mrp_report_wizard_report_action" model="ir.actions.act_window">
        <field name="name">MRP Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mrp_report_wizard_form"/>
        <field name="target">new</field>
    </record>
    <menuitem id="mrp_report_wizard" name="MRP Report"
              parent="stock.menu_warehouse_report" action="mrp_report_wizard_report_action" sequence="10"/>
</odoo>