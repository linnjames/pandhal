<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_encashment_tree" model="ir.ui.view">
        <field name="name">hr.leave.encashment.tree</field>
        <field name="model">hr.leave.encashment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id" optional="hide"/>
                <field name="current_user" optional="hide"/>
                <field name="job_id" optional="hide"/>
                <field name="manager_id" optional="hide"/>
                <field name="project_id" optional="hide"/>
                <field name="contract_id"/>
                <field name="encashment_amount_total"/>
                <field name="encashment_amount_balance"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-success="state == 'posted'" decoration-warning="state in ('approved','waiting')"/>
            </tree>
        </field>
    </record>

    <record id="hr_leave_encashment_form" model="ir.ui.view">
        <field name="name">hr.leave.encashment.form</field>
        <field name="model">hr.leave.encashment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" class="btn btn-primary" name="encashment_submit" string="Submit to Hod"
                            states="draft" groups="hr_leave_encashment.group_encashment_user"/>
                    <button type="object" class="btn btn-primary" name="encashment_approve" string="Approve"
                            states="waiting" groups="hr_leave_encashment.group_encashment_manager"/>
                    <button type="object" class="btn btn-primary" name="encashment_post" string="Post"
                            states="approved" groups="hr_leave_encashment.group_encashment_admin"/>
                    <button type="object" name="encashment_refused" string="Refuse" states="waiting"
                            groups="hr_leave_encashment.group_encashment_manager"/>
                    <button type="object" class="btn btn-primary" name="encashment_reset_draft" string="Reset to Draft"
                            states="refused,cancel" groups="hr_leave_encashment.group_encashment_user"/>
                    <button type="object" name="encashment_cancel" string="Cancel"
                            states="draft, waiting,refused" groups="hr_leave_encashment.group_encashment_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,approved,posted,refused"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="job_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="manager_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" invisible="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="contract_id" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                            <field name="project_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="debit_account_id"
                                   attrs="{'invisible': [('state', 'not in', ['approved','posted'])], 'readonly': [('state', '!=', 'approved')]}"/>
                            <field name="credit_account_id"
                                   attrs="{'invisible': [('state', 'not in', ['approved','posted'])], 'readonly': [('state', '!=', 'approved')]}"/>
                            <field name="journal_id"
                                   attrs="{'invisible': [('state', 'not in', ['approved','posted'])], 'readonly': [('state', '!=', 'approved')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="leave_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   force_save="1"/>
                            <field name="no_of_days_left" attrs="{'readonly': [('state', '!=', 'draft')]}" readonly="1"
                                   force_save="1"/>
                            <field name="no_of_days_encash" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   force_save="1"/>
                        </group>
                        <group>
                            <field name="amount_per_hrs" attrs="{'readonly': [('state', '!=', 'draft')]}" readonly="1"
                                   force_save="1"/>
                            <field name="encashment_amount_total" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   readonly="1" force_save="1"/>
                            <field name="encashment_amount_balance" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_leave_encashment_action" model="ir.actions.act_window">
        <field name="name">HR Leave Encashment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave.encashment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <record id="hr_leave_encashment_group" model="ir.ui.view">
        <field name="name">hr.leave.encashment.group</field>
        <field name="model">hr.leave.encashment</field>
        <field name="arch" type="xml">
            <search string="Employee">
                <filter name="group_employee_id" string="Employee"
                        context="{'group_by':'employee_id'}"/>
            </search>
        </field>
    </record>

    <menuitem id="hr_leave_encashment_root"
              name="HR Leave Encashment"
              parent="hr.menu_hr_root"
              sequence="5"/>

<!--    <menuitem id="hr_leave_encashment_menu_root"-->
<!--              name="HR Leave Encashment"-->
<!--              parent="hr_leave_encashment_root"-->
<!--              sequence="4"/>-->

    <menuitem id="hr_leave_encashment_root_menu"
              name="Encashment Request"
              parent="hr_leave_encashment_root"
              action="hr_leave_encashment_action"
              sequence="10"/>
</odoo>