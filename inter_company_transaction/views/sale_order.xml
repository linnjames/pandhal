<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_tree_inherit_view" model="ir.ui.view">
        <field name="name">Sale Order Tree Inherit View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_confirmed" string="company sale " type="object" invisible="1"/>
            </xpath>

            <xpath expr="//header/button[@name='action_confirm']" position="after">
                <button name="action_quick_sale" string="Quick Sale" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '=', 'sale'), ('indent_type', '!=', 'indent')]}"/>
            </xpath>
        </field>
    </record>

</odoo>