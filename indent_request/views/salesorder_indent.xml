<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="indent_sales_order" model="ir.ui.view">
        <field name="name">indent.sales.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_create_purchase_indent" type="object" string="Create Indent"
                        class="oe_highlight" states="sale"/>
            </xpath>

            <xpath expr="//field[@name='date_order']" position="after">
                <field name="indent_type"/>
            </xpath>
        </field>
    </record>


    <record id="sale_order_line_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.line.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="message"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="select_item"/>
            </xpath>

            <field name="state" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,cancel"
                />
            </field>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_purchase_indent" class="oe_stat_button"
                        icon="fa-star" type="object" states="indent_created" string="Indent">
                </button>
            </xpath>
        </field>
    </record>
</odoo>