<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_purchase_order_wizard" model="ir.ui.view">
        <field name="name">sh.purchase.order.wizard</field>
        <field name="model">purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <div>
                    <h4>Please Select vendor and hit 'Create Purchase Order' button</h4>
                </div>
                <group>
                    <group>
                        <field name="order_type"/>
                        <field name="vendor_id"/>
                    </group>
                    <group>
                        <field name="date_expected_delivery"/>
                    </group>
                </group>
                <field name="order_line">
                    <tree string="Purchase Order Lines" editable="bottom">
                        <field name="product_id" required="True"/>
                        <field name="company_id" invisible="True" options="{'no_create': True, 'no_open': True}"/>
                        <field name="partner_id" force_save="1"/>
                        <field name="name" required="True"/>
                        <field name="message"/>
                        <field name="product_qty" required="True"/>
                        <field name="product_uom" required="True" invisible="True"/>
                        <field name="price_unit" required="True"/>
                        <field name="unit_mrp" required="True"/>
                        <field name="price_subtotal" widget="monetary"/>
                    </tree>
                </field>
                <footer>
                    <button string="Create Purchase Order" type="object" name="sh_create_purchase_order"
                            class="btn-primary"/>or
                    <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
