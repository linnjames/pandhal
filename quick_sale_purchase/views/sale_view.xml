<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale order form view -->
    <record id="sh_so_po_inherit_sale_form" model="ir.ui.view">
        <field name="name">sh.so.po.inherit.sale.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <button name="sh_create_po" string="Create Purchase Order" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '=', 'draft','cancel'), ('indent_type', '!=', 'customer order')]}"/>
            </xpath>
            <xpath expr="//sheet/div[hasclass('oe_button_box')]" position="inside">
                <button name="sh_action_view_purchase" type="object" class="oe_stat_button" icon="fa-credit-card"
                        attrs="{'invisible': [('sh_purchase_count', '=', 0)]}">
                    <field name="sh_purchase_count" widget="statinfo" string="Purchase"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="before">
                <button name="btn_tick_untick" type="object" class="oe_stat_button btn-primary" string="P.O"
                        attrs="{'invisible': [('parent.state','!=', 'draft')]}"/>
                <field name="tick" attrs="{'readonly': [('parent.state','!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <div class="o_row" style="margin: 15px 0;">
                    <field name="purchase_tick_count" string="Purchase Tick" invisible="1"/>
                    <button name="action_check" icon="fa-check" class="btn btn-primary" type="object"/>
                    <button name="action_uncheck" icon="fa-close" class="btn btn-primary" type="object"/>
                </div>
            </xpath>
            <xpath expr="//form//group//group//field[@name='product_id']" position="before">
                <field name="tick"/>
            </xpath>
            <field name="date_order" position="after">
                <field name="purchase_button_bool" invisible="1"/>
            </field>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
