<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_valuation_tree" model="ir.ui.view">
        <field name="name">employee.valuation.tree</field>
        <field name="model">employee.valuation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" decoration-bf="1"/>
                <field name="date" decoration-bf="1"/>
                <field name="emp_id"/>
                <field name="department_id"/>
                <field name="exp_date" invisible="1"/>
                <field name="state" widget="badge" decoration-success="state == 'approve'"
                       decoration-info="state == 'draft'" decoration-warning="state in ('confirm', 'valuation')"/>
                <field name="result" widget="badge" decoration-success="result == 'pass'"
                       decoration-danger="result == 'fail'"/>
            </tree>
        </field>
    </record>


    <record id="employee_valuation_form" model="ir.ui.view">
        <field name="name">employee.valuation.form</field>
        <field name="model">employee.valuation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                            states="draft" type="object"/>
                    <button id="button_request" name="action_request" string="Request for Valuation" class="btn-primary"
                            states="confirm" type="object"/>
                    <button id="button_draft" name="action_draft" string="Reset to Draft"
                            states="confirm" type="object"/>
                    <button id="button_approve" name="action_approve" string="Approved" class="btn-primary"
                            states="valuation" type="object"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_performance_assessment_records" type="object" class="oe_stat_button"
                                icon="fa-list">
                            <div class="o_stat_info">
                                <!--                                <field name="exit_clear_count_total"/>-->
                                <span class="o_stat_text">Performance Assessment</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="emp_id" options="{'no_create': True}" required="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="exp_date" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Valuation">
                            <field name="emp_line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom" create="false">
                                    <field name="performance_id" readonly="1" force_save="1" required="1"/>
                                    <field name="min_mark" readonly="1" force_save="1"/>
                                    <field name="max_mark" readonly="1" force_save="1"/>
                                    <field name="obtained_mark" readonly="1" force_save="1"/>
                                    <field name="result" decoration-bf="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_valuation_search_view" model="ir.ui.view">
        <field name="name">employee.valuation.search.view</field>
        <field name="model">employee.valuation</field>
        <field name="arch" type="xml">
            <search string="Employee Valuation Search">
                <field name="reference"/>
                <field name="emp_id"/>
                <field name="department_id"/>
                <filter string="Approved"
                        name="state_approve"
                        domain="[('state', '=', 'approve')]"/>
                <group expand="0" string="Group By">
                    <filter string="Date" name="date"
                            context="{'group_by':'date'}"/>
                    <filter string="Department" name="department_id"
                            context="{'group_by':'department_id'}"/>
                    <filter string="Employee" name="emp_id" context="{'group_by':'emp_id'}"/>
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                    <filter string="Result" name="result" context="{'group_by':'result'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="employee_valuation_action" model="ir.actions.act_window">
        <field name="name">Employee Valuation</field>
        <field name="res_model">employee.valuation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state_approve': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create Employee Valuation...</p>
        </field>
    </record>

    <menuitem id="employee_valuation_root"
              name="Employee Valuation"
              parent="valuation_root"
              action="employee_valuation_action"
              sequence="2"/>

</odoo>