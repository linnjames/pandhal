<odoo>

    <record id="hr_employee_form_inherit_employee_valuation" model="ir.ui.view">
        <field name="name">hr.employee.form.employee.valuation</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="after">
                <group>
                    <field name="criteria_ids" widget="many2many_tags" options="{'no_create': True}"
                           domain="[('state', '=', 'approve')]"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>