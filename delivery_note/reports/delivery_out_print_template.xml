<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="delivery_out_print_template">
        <t t-call="web.basic_layout">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div width="100%">
                        <table width="100%" style="font-weight: bold; border-color:white ; font-size:20px;">
                            <tr>
                                <td style="font-size:70%; padding-left: 835px;" colspan="1">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div width="100%" style="text-align: center;">
                        <!--                                                <img src='/web/binary/company_logo'-->
                        <!--                                                     style="max-height: 25px;"-->
                        <!--                                                     alt="Logo"/>-->
                        <img src="/delivery_note/static/src/img/Screenshot from 2023-07-06 20-38-28.png"
                             style="max-height: 100px;"/>
                    </div>
                    <div width="100%">
                        <table width="100%" style="font-weight: bold; border-color:white ;">
                            <tr>
                                <td align="center"
                                    style="vertical-align: middle; font-size: 22px;">
                                    <span t-field="doc.company_id.partner_id"
                                          t-options='{"widget": "contact", "fields": ["address", "phone", "email"], "no_marker": True}'/>
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <!--                                <td align="center"-->
                                <!--                                    style="padding-top: 8px; vertical-align: middle; font-size: 20px;">-->
                                <!--                                    DELIVERY NOTE-->
                                <!--                                </td>-->
                                <br></br>
                                <br></br>
                            </tr>
                        </table>
                        <br></br>
                    </div>
                    <div width="100%">
                        <table width="100%" style="font-weight: bold; border-color:white ; font-size:20px;">
                            <tr>
                                <td style="padding-top: 5px;" colspan="5"/>
                            </tr>
                        </table>
                    </div>
                </t>
                <table width="100%"
                       style="border-bottom: 1px solid black;border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-collapse: collapse;">
                    <div style="width: 100%; padding: 0px; margin: 0; font-size: 20px;text-align:left">
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:20px;border-left: 1px solid black;">
                                    GSTIN:
                                    <span t-field="doc.company_id.vat"/>
                                </td>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:20px;border-left: 1px solid black;">
                                    <label>Date &amp; Time Of Supply:</label>
                                    <span t-field="doc.scheduled_date"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:20px;border-left: 1px solid black;">
                                    Serial no. of Challan:
                                    <span>
                                        <t t-esc="doc.name"/>
                                    </span>
                                </td>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:20px;border-left: 1px solid black;">
                                    <label>Place Of Supply:</label>
                                    <!--                            <b>KERALA</b>-->
                                    <span t-esc="doc.company_id.partner_id.state_id.name"/>
                                </td>
                            </tr>
                        </t>
                    </div>
                </table>
                <br></br>
                <table>
                    <t t-foreach="docs" t-as="doc">

                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                <label style="font-size:20px;font-weight: bold;">
                                    SHIPPED TO
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                Name:
                                <span t-field="doc.partner_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                Address:
                                <table style="border-collapse: collapse;">
                                    <tr>
                                        <td>
                                            <span t-esc="doc.partner_id.street"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.partner_id.street2"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span t-esc="doc.partner_id.city"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.partner_id.state_id.name"/>
                                            -
                                            <span t-esc="doc.partner_id.zip"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <span t-esc="doc.partner_id.country_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                <label style="font-size:20px;font-weight: bold;">
                                    SHIPPED FROM
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                Name:
                                <span t-field="doc.company_id.partner_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                Address:
                                <table style="border-collapse: collapse;">
                                    <tr>
                                        <td>
                                            <span t-esc="doc.company_id.partner_id.street"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.company_id.partner_id.street2"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span t-esc="doc.company_id.partner_id.city"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.company_id.partner_id.state_id.name"/>
                                            -
                                            <span t-esc="doc.company_id.partner_id.zip"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <span t-esc="doc.company_id.partner_id.country_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:left;padding: 0px 0px 0px 0px;font-size:20px;">
                                GSTIN:
                                <span t-field="doc.company_id.vat"/>
                            </td>
                        </tr>
                    </t>
                </table>
                <br></br>
                <div style="width: 100%;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">S. No</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">Product</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">HSN Code</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">Quantity</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">Unit</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">Cost</th>
                                <th style="border: 1px solid black; padding: 5px;font-size:20px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="sl_no" t-value="1"/>
                            <t t-foreach="docs" t-as="doc">
                                <t t-foreach="doc.move_line_ids" t-as="move_line">
                                    <tr>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="sl_no"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.product_id.name"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.product_id.l10n_in_hsn_code"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.qty_done"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.product_uom_id.name"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.product_id.standard_price"/>
                                            </span>
                                        </td>
                                        <td style="border: 1px solid black; padding: 5px;font-size:20px;">
                                            <span>
                                                <t t-esc="move_line.product_id.standard_price * move_line.qty_done"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <t t-set="sl_no" t-value="sl_no + 1"/>
                                </t>
                            </t>
                            <tr>
                                <td colspan="2" align="center"
                                    style="font-size:20px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    <b>GRAND TOTAL</b>
                                </td>
                                <td colspan="5" align="center"
                                    style="font-size:20px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    <b>
                                        <!--                                        <t t-esc="sum(move_line.product_id.standard_price * move_line.qty_done for move_line in doc.move_line_ids)"/>-->
                                        <span t-field="doc.total_amount"/>

                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td align="center" colspan="2"
                                    style="font-size:20px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    <b>
                                        Challan Total value (In Words)
                                    </b>
                                </td>
                                <td align="center" colspan="7"
                                    style="font-size:20px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    <b>
                                        <span t-field="doc.amount_in_words"/>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" rowspan="3" colspan="2"
                                    style="font-size:20px; padding-left: 4px; vertical-align: top; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    <b>
                                        Terms &amp; Conditions:
                                    </b>
                                </td>
                                <td align="center" colspan="7"
                                    style="font-size:20px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                    For,
                                    <b>
                                        <t t-esc="doc.company_id.partner_id.name"/>
                                    </b>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <b>
                                        Authorised Signatory
                                    </b>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="footer o_standard_footer">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <span class="page"/>
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="toppage"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>