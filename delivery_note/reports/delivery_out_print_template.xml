<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="delivery_out_print_template">
        <t t-call="web.basic_layout">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" width="100%">
                        <table width="100%" style="font-weight: bold; border-color:white ; font-size:20px;">
                            <tr>
                                <td style="font-size:70%; padding-left: 700px;" colspan="3">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br></br>
                    <div width="100%" style="text-align: left;">
                        <table width="80%" align="center"
                               style="font-weight: bold; border-color:white; font-size:18px;">
                            <tr>
                                <td align="center">
                                    <img src="/delivery_note/static/src/img/Screenshot from 2023-07-06 20-38-28.png"
                                         style="max-height: 80px;"/>
                                </td>
                                <td align="left"
                                    style="vertical-align: middle; font-size: 17px; padding-left: 12px;">
                                    <span t-field="doc.company_id.partner_id"
                                          t-options='{"widget": "contact", "fields": ["address", "phone", "email"], "no_marker": True}'/>
                                    <br/>
                                </td>
                            </tr>
                            <tr></tr>
                            <tr align="center">
                                <td align="center" colspan="2"
                                    style="text-align: center; padding: 25px; vertical-align: middle; font-size: 20px; font-weight: bold;">
                                    DELIVERY NOTE
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
                <table width="100%"
                       style="border-bottom: 1px solid black;border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-collapse: collapse;">
                    <div style="width: 100%; padding: 0px; margin: 0; font-size: 17px;text-align:left">
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;border-left: 1px solid black;font-size:17px; border-right: 1px solid white;">
                                    GSTIN :
                                </td>
                                <td style="text-align:left;font-size:17px;border-left: 1px solid white;">
                                    <span t-field="doc.company_id.vat"/>
                                </td>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;border-left: 1px solid black; border-right: 1px solid white;">
                                    Date &amp; Time Of Supply:
                                </td>
                                <td style="text-align:left;border-left: 1px solid white;">
                                    <span t-field="doc.scheduled_date"/>
                                </td>

                            </tr>
                            <tr>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:15px;border-left: 1px solid black;">
                                    Serial no. of Challan:
                                </td>
                                <td style="text-align:left;font-size:15px;border-left: 1px solid white;">
                                    <t t-esc="doc.name"/>

                                </td>
                                <td style="text-align:left;padding: 3px 0px 0px 3px;font-size:15px;border-left: 1px solid black;">
                                    <label>Place Of Supply:</label>
                                </td>
                                <td style="text-align:left;font-size:15px;border-left: 1px solid white;">
                                    <span t-esc="doc.company_id.partner_id.state_id.name"/>
                                </td>
                            </tr>
                        </t>
                    </div>
                </table>
            </t>
            <br></br>
            <table width="100%"
                   style="border-bottom: 1px solid">
                <!--                    <div style="width: 100%; padding: 0px; margin: 0; font-size: 17px;text-align:left">-->
                <t t-foreach="docs" t-as="doc">
                    <tr>
                        <td style="text-align:left;padding: 25px 0px 0px 7px;font-size:18px;">
                            <label style="font-size:20px;font-weight: bold;">
                                SHIPPED TO
                            </label>
                        </td>
                        <td style="text-align:left;padding: 25px 0px 0px 3px;font-size:18px;">
                            <label style="font-size:20px;font-weight: bold;">
                                SHIPPED FROM
                            </label>
                        </td>
                    </tr>
                    <tr style="padding: 25px 0px 0px 7px;font-size:16px; text-align:left;">
                        <td>
                            <span t-field="doc.partner_id"/>
                            <br/>
                            <span t-esc="doc.partner_id.street"/>
                            <br/>
                            <span t-esc="doc.partner_id.street2"/>
                            <br/>
                            <span t-esc="doc.partner_id.city"/>
                            <span t-esc="doc.partner_id.state_id.name"/>
                            <span t-esc="doc.partner_id.zip"/>
                            <span t-esc="doc.partner_id.country_id.name"/>
                        </td>

                        <td style="padding: 5px 0px 0px 3px; font-size: 16px;text-align:left;">
                            <span t-esc="doc.company_id.partner_id.street"/>
                            <br/>
                            <span t-esc="doc.company_id.partner_id.street2"/>
                            <br/>
                            <span t-esc="doc.company_id.partner_id.city"/>
                            <span t-esc="doc.company_id.partner_id.state_id.name"/>
                            <span t-esc="doc.company_id.partner_id.zip"/>
                            <br/>
                            <span t-esc="doc.company_id.partner_id.country_id.name"/>
                            <br/>
                            GSTIN:
                            <span t-field="doc.company_id.vat"/>
                        </td>
                    </tr>
                </t>
            </table>
            <br></br>
            <div style="width: 100%;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">S. No</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">Product</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">HSN Code</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">Quantity</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">Unit</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">Cost</th>
                            <th style="border: 1px solid black; padding: 5px;font-size:17px;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sl_no" t-value="1"/>
                        <t t-foreach="docs" t-as="doc">
                            <t t-foreach="doc.move_line_ids" t-as="move_line">
                                <tr>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="sl_no"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.product_id.name"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.product_id.l10n_in_hsn_code"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.qty_done"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.product_uom_id.name"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.product_id.standard_price"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid black; padding: 5px;font-size:16px;">
                                        <span>
                                            <t t-esc="move_line.product_id.standard_price * move_line.qty_done"/>
                                        </span>
                                    </td>
                                </tr>
                                <t t-set="sl_no" t-value="sl_no + 1"/>
                            </t>
                        </t>
                        <tr>
                            <td colspan="2" align="center"
                                style="font-size:15px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                <b>GRAND TOTAL</b>
                            </td>
                            <td colspan="5" align="center"
                                style="font-size:18px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                <b>
                                    <!--                                        <t t-esc="sum(move_line.product_id.standard_price * move_line.qty_done for move_line in doc.move_line_ids)"/>-->
                                    <span t-field="doc.total_amount"/>

                                </b>
                            </td>
                        </tr>
                        <!--                        <tr>-->
                        <!--                            <td align="center" colspan="2"-->
                        <!--                                style="font-size:15px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">-->
                        <!--                                <b>-->
                        <!--                                    Challan Total value (In Words)-->
                        <!--                                </b>-->
                        <!--                            </td>-->
                        <!--                            <td align="center" colspan="7"-->
                        <!--                                style="font-size:15px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">-->
                        <!--                                <b>-->
                        <!--                                    <span t-field="doc.amount_in_words"/>-->
                        <!--                                </b>-->
                        <!--                            </td>-->
                        <!--                        </tr>-->
                        <tr>
                            <td align="left" rowspan="3" colspan="2"
                                style="font-size:14px; padding-left: 4px; vertical-align: top; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                <b>
                                    Terms &amp; Conditions:
                                </b>
                            </td>
                            <td align="center" colspan="7"
                                style="font-size:16px; padding-left: 4px; vertical-align: middle; border-right:1px solid black; border-left:1px solid black; border-top:1px solid black; border-bottom:1px solid black;">
                                For,
                                <b>
                                    <t t-esc="doc.company_id.partner_id.name"/>
                                </b>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <b>
                                    Authorised Signatory
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="footer o_standard_footer">
                <div class="row text-center">
                    <div class="col col-12 text-center">
                        <ul class="list-inline" style="padding: 8px; list-style: none;">
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="toppage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
