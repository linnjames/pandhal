<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record model="ir.module.category" id="module_category_support_user_type">
      <field name="name">Support User</field>
      <field name="description">Types of support users.</field>
      <field name="sequence">10</field>
    </record>

    <record id="support_group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="module_category_support_user_type"/>
    </record>
    <record id="support_group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="implied_ids" eval="[(4, ref('support_group_user'))]"/>
      <field name="category_id" ref="module_category_support_user_type"/>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
  </data>
</odoo>