<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_res_partner" model="ir.ui.view">
        <field name="name">inherit.res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <br></br>
                <h5>
                    <field name="registration_number" readonly="1" string="Registration Number"/>
                </h5>
            </field>
            <field name="name" position="attributes">
                <attribute name="widget">char</attribute>
            </field>
            <field name="vat" position="before">
                <field name="company_size"/>
            </field>
            <field name="vat" position="attributes">
                <attribute name="string">GST No</attribute>
            </field>
            <field name="company_type" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>


    <record id="inherit_res_partner_vat" model="ir.ui.view">
        <field name="name">inherit.res.partner.vat</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_vat.view_partner_base_vat_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="attributes">
                <attribute name="string">GST No</attribute>
            </field>
        </field>
    </record>

    <record id="inherit_res_partner_tree" model="ir.ui.view">
        <field name="name">inherit.res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='display_name']" position="after">
                <field name="registration_number"/>
            </xpath>

        </field>

    </record>

</odoo>