<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="ticket_reschedule_wizard_view_form" model="ir.ui.view">
    <field name="name">ticket.reschedule.wizard.form</field>
    <field name="model">ticket.reschedule.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group colspan="2">
          <field name="ticket_id"/>
          <field name="date_rescheduled"/>
        </group>
        <footer>
          <button name="action_reschedule_date" string="Submit" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>