<?xml version="1.0"?>
<odoo>

    <record id="inventory_in_out_report_action_form" model="ir.ui.view">
        <field name="name">inventory.in.out.report.action.form</field>
        <field name="model">inventory.in.out.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory IN/OUT Report">
                <group>
                    <group>
                        <field name="fr_date" required="1"/>
                        <field name="to_date" required="1"/>
                    </group>
                    <group>
                        <field name="item_name" required="1"/>
                        <field name="location_id" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Print" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="inventory_in_out_wizard_report_action" model="ir.actions.act_window">
        <field name="name">Inventory IN/OUT Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inventory.in.out.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inventory_in_out_report_action_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="inventory_in_out_wizard_report_menu"
              name="Inventory IN/OUT Report"
              parent="stock.menu_warehouse_report"
              action="inventory_in_out_wizard_report_action"
              sequence="5"/>

</odoo>
