<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_post_wizard_form_view" model="ir.ui.view">
        <field name="name">account.post.wizard.form</field>
        <field name="model">account.post.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Post Form">
<!--                <p class="oe_grey">-->
<!--                    Here you can download only 5 at a time.-->
<!--                </p>-->
                <group>
                    <field name="move_ids" widget="many2many_tags" class="oe_inline" required="0" ptions="{'no_create': True}" force_save="1"/>
                </group>
                <footer>
                    <button name="action_account_post" string="Post" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="account_post_view_action" model="ir.actions.act_window">
        <field name="name">Post Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.post.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
