<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_product_wizard_form_view" model="ir.ui.view">
        <field name="name">add.product.wizard.form</field>
        <field name="model">add.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Product">
                <group>
                    <field name="product_ids" widget="many2many_tags" class="oe_inline"
                           options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" force_save="1"
                           domain="[('id', '=', productids)]"/>
                    <field name="move_id" invisible="1"/>
                    <field name="productids" widget="many2many_tags" class="oe_inline"
                           options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" force_save="1"
                           invisible="1"/>
                </group>
                <footer>
                    <button name="action_add" string="Add" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_add_product_view" model="ir.actions.act_window">
        <field name="name">Post Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">add.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!--        <field name="binding_model_id" ref="sales_invoice_print.add_product_wizard_form_view"/>-->
    </record>

</odoo>
