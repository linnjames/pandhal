<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="update_usd_to_inr_wizard_view" model="ir.ui.view">
            <field name="name">update.usd.to.inr.wizard</field>
            <field name="model">update.usd.to.inr.wizard</field>
            <field name="arch" type="xml">
                <form string="Update Receipt Number">

                    <group>
                        <field name="move_ids" class="oe_inline"/>

                    </group>
                    <footer>
                        <button name="multi_update_inr_converted_amount" id="multi_update_inr_converted_amount_id" string="Confirm" type="object"
                            class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="update_usd_to_inr_wizard_action" model="ir.actions.act_window">
            <field name="name">Update Amount Conversion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.usd.to.inr.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_view_types">list</field>
        </record>

</odoo>
