<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherit_stock_picking_indent_request" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="transfer_id"/>

                </field>

                <field name="transfer_id" position="after">
                    <field name="sale_transfer_id"/>
                </field>

                <xpath expr="//page[@name='extra']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='date_done']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="custom_stock_picking_tree_view">
            <field name="name">custom.stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_picking_form_product_customization_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.product_customization.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>