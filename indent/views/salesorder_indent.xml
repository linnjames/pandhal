<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="indent_sales_order" model="ir.ui.view">
        <field name="name">indent.sales.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_create_purchase_indent" type="object" string="Create Indent"
                        class="oe_highlight" states="sale" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='date_order']" position="after">
                <field name="indent_type" attrs="{'readonly': [('state', 'in', ['sale','cancel'])]}"/>
            </xpath>

<!--            <xpath expr="//form/sheet/group/group/field[@name='validity_date']" position="attributes">-->
<!--                <attributes name="required">0</attributes>-->
<!--            </xpath>-->

            <xpath expr="//header" position="inside">
                <button id="create_invoices" name="%(sale.action_view_sale_advance_payment_inv)d"
                        string="Create Invoice"
                        type="action" class="btn-primary" data-hotkey="q"
                        attrs="{'invisible': [('state', 'in', ['draft','sent','sale','done'])]}"/>
            </xpath>

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="attachment"/>
            </xpath>

            <xpath expr="//field[@name='attachment']" position="after">
                <field name="is_true" invisible="1"/>
            </xpath>

        </field>
    </record>


    <record id="sale_order_line_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.line.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_discount_sale']" position="after">
                <field name="discount_per" force_save="1" attrs="{'invisible':[('is_discount_sale', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="message"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="select_item" invisible="1"/>
            </xpath>

<!--            <xpath expr="//form/sheet/group/group/field[@name='validity_date']" position="attributes">-->
<!--                <attributes name="required">1</attributes>-->
<!--            </xpath>-->

            <field name="validity_date" position="attributes">
                <attribute name="required">1</attribute>
            </field>

            <field name="state" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"
                />
            </field>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_purchase_indent" class="oe_stat_button"
                        icon="fa-star" type="object" states="sale" string="Indent" invisible="1">
                </button>
            </xpath>
        </field>
    </record>
</odoo>