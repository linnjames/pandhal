<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_confirm_sale_purchase" model="ir.actions.server">
        <field name="name">Confirmed</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for order in records:
            order.action_confirm()
        </field>
    </record>

    <record id="action_confirm_purchase_sale" model="ir.actions.server">
        <field name="name">Confirmed</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="binding_model_id" ref="model_purchase_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for order in records:
            order.button_confirm()
        </field>
    </record>
    <record id="action_cancel_sale_purchase" model="ir.actions.server">
        <field name="name">Cancelled</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for order in records:
            order.action_cancel()
        </field>
    </record>
    <record id="action_cancel_purchase_sale" model="ir.actions.server">
        <field name="name">Cancelled</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="binding_model_id" ref="model_purchase_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for order in records:
            order.button_cancel()
        </field>
    </record>

    <record id="purchase_attachment" model="ir.ui.view">
        <field name="name">purchase_attachment</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='indent_type']" position="after">
                <field name="attachment"/>
            </xpath>
        </field>
    </record>
</odoo>