<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="indent_request_tree" model="ir.ui.view">
        <field name="name">indent.request.tree</field>
        <field name="model">indent.request</field>
        <field name="arch" type="xml">
            <tree string="Purchase Indent ">
                <field name="reference"/>
                <field name="vendor_id" />
                <field name="indent_type"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="expected_date"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'"
                       decoration-info="state == 'draft'"/>
                <field name="delivery_status" widget="badge"
                       decoration-danger="state=='cancel'"
                       decoration-info="state== 'assigned'"
                       decoration-muted="state == 'draft'"
                       decoration-primary="state == 'assigned'"
                       decoration-success="state == 'done'"
                       decoration-warning="state not in ('draft','cancel','done','assigned')"/>
            </tree>
        </field>
    </record>


    <record id="indent_request_form" model="ir.ui.view">
        <field name="name">indent.request.form</field>
        <field name="model">indent.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirmed" id="button_confirmed" string="Confirm Order" class="btn-primary"
                            type="object" states="draft"/>
                    <button name="action_cancel" id="button_cancel" string="Cancel" class="btn-primary"
                            type="object" states="draft,confirmed"/>
<!--                    <button name="action_create_purchase" id="button_create_purchase" string="Create Purchase"-->
<!--                            class="btn-primary"-->
                            type="object" states="confirmed"/>
                    <field name="state" widget="statusbar" clickable="1"
                           statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_purchase_transfer" type="object" class="oe_stat_button"
                                icon="fa-truck" states="confirmed,cancel">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Transfer</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_tittle">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
<!--                            <field name="vendor_id" required="1"/>-->
                            <field name="vendor_id" required="1" options="{'no_create': True, 'no_edit': True}"
                            attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel'))]}"/>
                            <field name="indent_type" attrs="{'readonly':[('state', 'in', 'confirmed')]}"/>
                            <field name="reference_id" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel'))]}"/>
                            <field name="attachment"/>
                        </group>
                        <group>
                            <!--                            <field name="company_id"/>-->
                            <field name="expected_date" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel'))]}"/>
                            <field name="company_id"/>
                            <field name="sale_purchase_id" invisible="1"/>
                             <field name="sale_indent_purchase_id" invisible="1"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="Purchase" name="purchase_lines">-->
<!--                            <field name="purchase_line_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="product_id"/>-->
<!--                                    <field name="message"/>-->
<!--                                    <field name="uom_id"/>-->
<!--                                    <field name="qty"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                    <notebook>
                        <page string="Purchase" name="purchase_lines">
                            <field name="purchase_line_ids" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel'))]}">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                    <field name="message"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_confirm_indent_purchase" model="ir.actions.server">
        <field name="name">Confirmed</field>
        <field name="model_id" ref="model_indent_request"/>
        <field name="binding_model_id" ref="model_indent_request"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            records.action_confirmed()
        </field>
    </record>

    <record id="action_cancelled_indent_purchase" model="ir.actions.server">
