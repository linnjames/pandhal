<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_approval" model="ir.ui.view">
        <field name="name">purchase_approval</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

             <xpath expr="//button[@name='button_confirm']" position="attributes">
                <attribute name="groups">indent.purchase_multi_level_approval_confirm</attribute>
            </xpath>

            <xpath expr="//button[@id='draft_confirm']" position="attributes">
                <attribute name="groups">indent.purchase_multi_level_approval_confirm</attribute>
            </xpath>

            <xpath expr="//button[@id='bid_confirm']" position="replace">
                    <button name="button_confirm" type="object" states="approve,sent" string="Confirm Order" context="{'validate_analytic': True}" class="oe_highlight" id="bid_confirm" data-hotkey="v" groups="indent.purchase_multi_level_approval_confirm"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']"
                   position="after">
                <field name="available_qty"/>
            </xpath>

            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_product_customization" model="ir.ui.view">
        <field name="name">purchase.order.form.product_customization</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_gst_treatment']" position="after">
                <field name="indent_type" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
            </xpath>
        </field>
    </record>


    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

</odoo>