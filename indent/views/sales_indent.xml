<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sales_indent_request_tree" model="ir.ui.view">
        <field name="name">sales.indent.request.tree</field>
        <field name="model">sales.indent</field>
        <field name="arch" type="xml">
            <tree string="Sales Indent ">
                <field name="reference"/>
                <field name="vendor_id"/>
                <field name="indent_type"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="expected_date"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'"
                       decoration-info="state == 'draft'"/>
                <field name="delivery_status" widget="badge"
                       decoration-danger="state=='cancel'"
                       decoration-info="state== 'assigned'"
                       decoration-muted="state == 'draft'"
                       decoration-primary="state == 'assigned'"
                       decoration-success="state == 'done'"
                       decoration-warning="state not in ('draft','cancel','done','assigned')"/>
            </tree>
        </field>
    </record>


    <record id="sales_indent_request_form" model="ir.ui.view">
        <field name="name">sales.indent.request.form</field>
        <field name="model">sales.indent</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirmed" id="button_confirmed" string="Confirm Order" class="btn-primary"
                            type="object" states="draft"/>
                    <button name="action_cancel" id="button_cancel" string="Cancel" class="btn-primary"
                            type="object" states="draft,confirmed"/>
                    <!--                    <button name="action_create_purchase" id="button_create_purchase" string="Create Purchase"-->
                    <!--                            class="btn-primary"-->
                    <!--                            type="object" states="confirmed"/>-->
                    <field name="state" widget="statusbar" clickable="1"
                           statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_transfer" type="object" class="oe_stat_button" icon="fa-truck" states="confirmed,cancel">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Transfer</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_tittle">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id" required="1"/>
                            <field name="indent_type" required="1" attrs="{'readonly':[('state', 'in', 'confirmed')]}"/>
                            <field name="no_id"/>
                            <field name="attachment"/>
                            <field name="is_true" invisible="1"/>
                            <field name="planing_id" invisible="1"/>

                        </group>
                        <group>
                            <!--                            <field name="order_date"/>-->
                            <field name="expected_date"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sales" name="sales_line">
                            <field name="sales_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="message"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_confirmed_server" model="ir.actions.server">
        <field name="name">Confirmed</field>
        <field name="model_id" ref="model_sales_indent"/>
        <field name="binding_model_id" ref="model_sales_indent"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records: re = records.action_confirmed()
<!--            if records and records.state == 'draft':-->
<!--            re = records.action_confirmed()-->
        </field>
    </record>


    <record id="action_cancelled_server" model="ir.actions.server">
        <field name="name">Cancelled</field>
        <field name="model_id" ref="model_sales_indent"/>
        <field name="binding_model_id" ref="model_sales_indent"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records and records.state == 'draft':
            r = records.action_cancel()
        </field>
    </record>



    <record id="sales_indent_request_action" model="ir.actions.act_window">
        <field name="name">Sales Indent</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sales.indent</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sales_indent_request_menu_root"
              name="Sale Indent"
              parent="sale.sale_menu_root"
              sequence="10"
    />

    <menuitem id="sales_indent_request_sub_menu_root"
              name="Indent From Shop"
              parent="sales_indent_request_menu_root"
              action="sales_indent_request_action"
              sequence="5"
    />
</odoo>