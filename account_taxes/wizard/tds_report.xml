<?xml version="1.0"?>
<odoo>
    <record id="tds_report_form" model="ir.ui.view">
        <field name="name">tds.report.form</field>
        <field name="model">tds.report</field>
        <field name="arch" type="xml">
            <form string="TDS Report">
                <separator string="TDS Report"/>
                <group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="to_date" required="1"/>
                    </group>
                    <group>
                        <field name="type_selection"/>
                        <field name="date_selection" required="1"/>
                    </group>
                </group>
                <footer>
                    <button icon="fa-print" string="TDS Report" name="print_tds_report" type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tds_report_action" model="ir.actions.act_window">
        <field name="name">TDS Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tds.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tds_report_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="tds_report_menu"
              name="TDS Report"
              parent="account.menu_finance_reports"
              sequence="10"/>

    <menuitem id="tds_report_root_menu"
              name="TDS Report"
              parent="tds_report_menu"
              action="tds_report_action"
              sequence="10"/>

</odoo>