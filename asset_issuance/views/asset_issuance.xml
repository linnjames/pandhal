<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="asset_issuance_inherit_hr_employee_new">
            <field name="name">asset.issuance.inherit.hr.employee.new</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(action_employee_asset_issuance)d" type="action" string="Assets"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_issuance_inherit_hr_employee_transfer">
            <field name="name">asset.issuance.inherit.hr.employee.transfer</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="asset_count" invisible="1"/>
                    <button name="button_view_transfer" type="object" string="Assets"
                            class="oe_highlight" icon="fa-truck"
                            attrs="{'invisible': [('asset_count', '=', 0)]}"/>
                </xpath>

                <xpath expr="//page[@name='personal_information']/group/group/field[@name='has_work_permit']"
                       position="after">
                    <field name="notice_period" string="Notice Period">Days
                        <!--                <label for="Days" string="Days"/>-->
                    </field>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='notice_period']"
                       position="after">
                    <field name="esi_account" string="ESI Account No"/>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='esi_account']"
                       position="after">
                    <field name="pf_account" string="PF Account No"/>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='lang']"
                       position="after">
                    <field name="account_no" string="Account No"/>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='study_school']"
                       position="after">
                    <field name="skills" string="Skills"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_issuance_inherit_hr_employee">
            <field name="name">asset.issuance.inherit.hr.employee</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="asset_wizard_id" invisible="1"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
