<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="asset_issuance_inherit_hr_employee">
            <field name="name">asset.issuance.inherit.hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='326']" position="after">
                    <button name="%(action_employee_asset_issuance)d" type="action" string="Assets"
                            class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='673']" position="after">
                    <button name="button_view_transfer" type="object" string="Assets"
                            class="oe_highlight" icon="fa-truck"
                    />
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="asset_issuance_wizard_inherit_stock_picking">
            <field name="name">asset.issuance.wizard.inherit.stock.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="asset_wizard_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
