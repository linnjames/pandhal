<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="asset_transfer_wizard" model="ir.ui.view">
            <field name="name">asset.action.transfer.form</field>
            <field name="model">asset.transfer</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name_id"/>
                            <field name="operation_type_id"/>
                            <field name="default_employee_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="wizard_action_transfer" type="object" string="Asset Transfer"
                                class="btn-primary"/>
                    </footer>
                    <notebook>
                        <page string="Add Products" name="transfer">
                            <field name="asset_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


        <record id="action_employee_asset_issuance" model="ir.actions.act_window">
            <field name="name">Asset Issuance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.transfer</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="asset_transfer_wizard"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
