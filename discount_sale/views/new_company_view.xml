<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="company_discount">
        <field name="name">Company Discount Approved</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Discount Sale Details">
                    <form>
                        <group>
                            <group>
                                <field name="user" widget="many2many_tags"/>
                                <field name="manager_ids" widget="many2many_tags"/>
                                <field name="owner" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="user_discount" attrs="{'invisible': [('user', '==', False)]}" required="1"/>
                                <field name="manager_discount" attrs="{'invisible': [('user', '==', False)]}" required="1"/>
                                <field name="owner_discount" attrs="{'invisible': [('owner', '==', False)]}" required="1"/>
                            </group>
                        </group>
                    </form>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

