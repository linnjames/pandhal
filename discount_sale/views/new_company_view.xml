<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="company_discount">
        <field name="name">Company Discount Approved</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Discount Sale Details">
                    <group>
                        <group>
                            <field name="user" widget="many2many_tags" required="1"/>
                            <field name="manager_ids" widget="many2many_tags" required="1"/>
                            <field name="owner" widget="many2many_tags" required="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

