<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="sales_order_preview">
        <field name="name">Sale order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_discount_sale" attrs="{'readonly': [('state', 'in', ['sale', 'done'])]}"/>
            </xpath>

            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='discount']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="total_price" readonly="1" force_save="1"
                       attrs="{'invisible': [('is_discount_sale', '=', False)]}"/>
                <field name="discount_amt" readonly="1" force_save="1"
                       attrs="{'invisible': [('is_discount_sale', '=', False)]}"/>
            </xpath>

        </field>
    </record>


    <record model="ir.ui.view" id="sales_order_line_subtotal">
        <field name="name">Sale order Line Subtotal</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='discount']" position="after">
                <field name="subtotal" force_save="1"/>
            </xpath>
        </field>
    </record>


    <record model="ir.ui.view" id="account_move_discount">
        <field name="name">Account Move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="total_price" readonly="1" force_save="1"/>
                <field name="discount_amt" readonly="1" force_save="1"/>
            </xpath>

            <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree/field[@name='tax_ids']"
                   position="after">
                <field name="subtotal"/>
            </xpath>
        </field>
    </record>

</odoo>

