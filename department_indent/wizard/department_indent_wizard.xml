<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="department_indent_wizard" model="ir.ui.view">
            <field name="name">department.indent.wizard</field>
            <field name="model">department.indent.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name_id"/>
                                <field name="operation_type_id"/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_transfer" string="Request" type="object"
                                    class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                        <notebook>
                        <page string="Add Products" name="transfer">
                            <field name="dept_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_department_indent" model="ir.actions.act_window">
            <field name="name">Department Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">department.indent.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="department_indent_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="department_indent_wizard_menu"
                  name="Department Material Request"
                  parent="stock.menu_stock_warehouse_mgmt"
                  action="action_department_indent"
                  sequence="5"
        />
    </data>
</odoo>