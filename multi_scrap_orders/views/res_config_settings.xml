<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="multi_mail_invoice" model="ir.ui.view">
            <field name="name">res.config.settings.form.mail</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invite_users']" position="after">
                    <h2>Invoice Mail To User</h2>
                    <div class="row mt16 o_settings_container" id="taxes_task">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="multi_user"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="multi_user"/>
                            </div>
                        </div>
                    </div >
                    <div class="row mt16 o_settings_container" id="taxes_task">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="mail_ids" attrs="{'invisible': [('multi_user', '=', False)]}"/>
                                <field name="mail_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('multi_user', '=', False)]}"/>
                            </div>
                            <br/>
                        </div>
                    </div>
                    <xpath
                            expr="//div[@id='multi_company']//field[@name='module_account_inter_company_rules']"
                            position="attributes"
                    >
                    </xpath>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
