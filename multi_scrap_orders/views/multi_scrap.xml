<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="validate_customization_view" model="ir.ui.view">
        <field name="name">validate.inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="attributes">
                <attribute name="groups">multi_scrap_orders.group_single_scrap</attribute>
            </xpath>
        </field>
    </record>

    <record id="multi_scrap_tree" model="ir.ui.view">
        <field name="name">multi.scrap.tree</field>
        <field name="model">multi.scrap</field>
        <field name="arch" type="xml">
            <tree string="Multi Scrap">
                <field name="name_seq"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="multi_scrap_form" model="ir.ui.view">
        <field name="name">multi.scrap.form</field>
        <field name="model">multi.scrap</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validate Scrap Order" type="object" class="oe_highlight"
                            states="draft" groups="multi_scrap_orders.group_approve_scrap"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_scrap_product_move" class="oe_stat_button" type="object"
                                icon="fa-handshake-o"
                                attrs="{'invisible': [('state', '!=', 'done')]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Scrap Product Move</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq" readonly="1"/>
                        </h1>

                    </div>
                    <group>
                        <group>
                            <field name="location_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="scrap_location_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="reason_one" attrs="{'readonly':[('state','=','done')]}"/>
                        </group>
                        <group>
                            <field name="source_doc" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="expected_date" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="company_id" groups="base.group_multi_company"
                                   attrs="{'readonly':[('state','=','done')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operation">
                            <field name="operation_ids" attrs="{'readonly':[('state','=','done')]}">
                                <tree editable="bottom">
                                    <field name='product_id' options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                    <field name='quantity'/>
                                    <field name='product_uom_id'/>
                                    <field name='stock_loc'/>
                                    <field name="lot_id" domain="[('product_id', '=', product_id)]"/>
                                    <field name="reason"/>
                                    <field name="received_goods" groups="multi_scrap_orders.group_receive_scrap"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="multi_scrap_action" model="ir.actions.act_window">
        <field name="name">Multi Scrap</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multi.scrap</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Scrap
            </p>
        </field>
    </record>

    <menuitem id="scrap_root"
              name="Multi Scrap Order"
              action="multi_scrap_action"
              parent="stock.menu_stock_warehouse_mgmt"
              groups="multi_scrap_orders.group_multi_scrap"
              sequence="4"/>

</odoo>
