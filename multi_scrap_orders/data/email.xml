<?xml version="1.0" ?>
<odoo>

      <data noupdate="1">
        <!--Email template -->
        <record id="multi_scrap_report_mail" model="mail.template">
            <field name="name">Multi Scrap: Send by email</field>
            <field name="model_id" ref="multi_scrap_orders.model_multi_scrap"/>
            <field name="email_from">${object.self.create_uid.email.email_formatted  |safe}</field>
            <field name="email_to">${object.j.mail_ids.id}</field>
            <field name="subject">Multi Scrap Report${object.company_id.name} Invoice (Ref ${object.name or 'n/a'})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear

                            <br />

                    </p>
                </div>
            </field>
            <field name="report_template" ref="account_invoices"/>
            <field name="report_name">Invoice_${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>

        </record>
    </data>
</odoo>
